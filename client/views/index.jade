var top_level = #{top_level}

extends layout

block content
  div(class="my-layout mdl-layout mdl-js-layout mdl-layout--fixed-header")
    header(class="mdl-layout__header")
      div(class="mdl-layout__header-row")
        span(class="mdl-layout-title") What interests you?
        div.mdl-layout-spacer
    
    div.mdl-layout__drawer
      each val in top_level
        a(
          href="/"+ val.slug,
          class="mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect") #{val.description}


    main.mdl-layout__content
      each val, index in top_level
        div(
          class="demo-card-wide mdl-card mdl-cell mdl-cell--12-col mdl-cell--8-col-tablet mdl-cell--4-col-tablet mdl-shadow--2dp mdl-color--grey-50") 
          
          
          div(
            class="mdl-card__title",
            style='background-image: url(' + val.img + ');'
          )
          
          div(class="mdl-card__actions mdl-card--border")
            a(
              href="/"+ val.slug,
              class="mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect") #{val.description}
